@model ECommerce.Models.ViewModels.ProductVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Yeni Ürün Oluştur";
}

<div class="container">
        <form method="post" enctype="multipart/form-data">

            <div class="row p-3 border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.Product.Id != 0)
                {
                    //edit
                    title = "Ürünü Düzenle";
                    <input type="hidden" asp-for="Product.Id" />
                }
                <div class="col-12 border-bottom">
                    <h2 class="text-primary">@title</h2>
                </div>
                <div class="col-8 pt-4">
                    <div class="form-group row">
                        <div class="col-4">
                            @*<label asp-for="Product.Name"></label>*@
                            Ad
                        </div>
                        <div class="col-8">
                            <input asp-for="Product.Name" class="form-control" />
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            @*<label asp-for="Product.Description"></label>*@
                            Açıklama
                        </div>
                        <div class="col-8">
                            <textarea asp-for="Product.Description" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            @*<label asp-for="Product.Price"></label>*@
                            Fiyat
                        </div>
                        <div class="col-8">
                            <input asp-for="Product.Price" class="form-control" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            Kategori
                        </div>
                        <div class="col-8">
                            @Html.DropDownListFor(m => m.Product.CategoryId, Model.CategoryList, "-Kategori seçiniz.",
                                new { @class = "form-control" })
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            Alt Kategori
                        </div>
                        <div class="col-8">
                            @Html.DropDownListFor(m => m.Product.SubCategoryId, Model.SubCategoryList, "-Alt kategori seçiniz",
                                new { @class = "form-control" })
                            <span asp-validation-for="Product.SubCategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            Fotoğraf
                        </div>
                        <div class="col-8">
                            <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            @if (Model.Product.Id != 0)
                            {
                                <partial name="_EditAndBackToListButton" model="Model.Product.Id" />
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col">
                                        <button type="submit" onclick="return validateInput()" class="btn btn-primary form-control">Oluştur</button>
                                    </div>
                                    <div class="col">
                                        <button asp-action="Index" class="btn btn-primary form-control">Listeye geri dön</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                @if (Model.Product.Id != 0)
                {
                    <div class="col-3 offset-1 pt-4">
                        <img src="@Model.Product.ImageUrl" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9" />
                    </div>
                }
            </div>

        </form>
    </div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/n94ifuzvl80pchikopiwgz2esrw8n28dwcywvpejlqrregfp/tinymce/5/tinymce.min.js"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Error", "Please select an image", "error");
                return false;
            }
            return true;
        };
    </script>

}