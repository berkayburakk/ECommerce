@*@model IEnumerable<Category>*@
@model IEnumerable<Product>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="card-list row pb-3 backgroundWhite">
        @foreach (var product in Model)
        {

            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12  p-1" style="border-radius: 5px;">
                        <div class="card" style="border: 0px;">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5"><b style="color: #2c3e50">@product.Title</b></p>
                                <p class="card-title ">Yazar: <b class="text-primary"> @product.Author </b></p>
                            </div>
                            <div style="padding-left: 5px;">
                                <p>Ürün Fiyati: <b class=""> @product.Price ₺</b></p>
                            </div>

                            <div>
                                <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Detaylar</a>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts
{
    <script src=""></script>
}
