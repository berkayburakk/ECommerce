@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link   box bar " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hoşgeldin @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn  box bar">Çıkış Yap</button>

                </form>

            </li>



        }
        else
        {
            <li class="nav-item " >
                <a  class="nav-link text-white btn  box bar" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white btn box bar" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
            </li>
            
        }
    </ul>



